
@model Login 
@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <a asp-action="Index" style="color:black; text-decoration:none;"><h1>Horizon</h1></a>
    <h2>We Are Built Different</h2>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="text-right">
        <div>
            <a asp-action="Search" class="btn-sm btn-danger">Search</a>
            <a asp-action="Login" class="btn-sm btn-primary">Login</a>
            <a asp-action="MyCart" class="btn-sm btn-warning">My Cart</a>
        </div>
    </div>
    <form method="post" class="m-2 text-center">
        <div id="error-message-div" asp-validation-summary="All">
        </div>
        <div>
            <label>
                Email:
            </label>
            <input asp-for="Email" class="center-block" placeholder="Email" />
        </div>
        <div>
            <label>
                Password:
            </label>
            <input asp-for="Password" class="center-block" placeholder="Password" />
        </div>
        <div>
            <a asp-action="ForgotPassword">Forgot Password?</a> 
        </div>
        <div>
            <a href='@Url.Action("Add", "Register")'>Do not have an account? Sign up!</a> 
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="Login" />
        </div>
    </form>

    
   



</body>

</html>